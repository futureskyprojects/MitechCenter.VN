    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách phản hồi</h4>
                    <div class="table-responsive">
                        <table id="multi_col_order"
                               class="table table-striped table-bordered display no-wrap" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="text-center">STT</th>
                                    <th class="text-center">Họ tên - Emal</th>
                                    <th class="text-center">Địa chỉ - SĐT</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < feedbacks.Count(); i++)
                                {
                                    Feedback feedback = feedbacks.ElementAt(i);
                                <tr>
                                    <td class="text-center">@(i+1)</td>
                                    <td class="text-center">@feedback.fFullname<br>@feedback.fEmail</td>
                                    <td>@feedback.fAddress<br />(@feedback.fPhone)</td>
                                    <td class="text-center">
                                        <button type="button" class="btn waves-effect waves-light btn-info" data-toggle="modal" data-target="#info-alert-modal-@feedback.fId.ToString()">Nội dung</button>
                                        <a type="button" class="btn waves-effect waves-light btn-danger" href="Delete/@feedback.fId">Xóa</a>
                                    </td>

                                    <!-- Info Alert Modal -->
                                    <div id="info-alert-modal-@feedback.fId.ToString()" class="modal fade" tabindex="-1" role="dialog"
                                         aria-hidden="true">
                                        <div class="modal-dialog modal-sm">
                                            <div class="modal-content">
                                                <div class="modal-body p-4">
                                                    <div class="text-center">
                                                        <i class="dripicons-information h1 text-info"></i>
                                                        <h4 class="mt-2">@feedback.fFullname</h4>
                                                        <p class="mt-3">
                                                            @feedback.fContent
                                                        </p>
                                                        <button type="button" class="btn btn-info my-2"
                                                                data-dismiss="modal">
                                                            Đóng
                                                        </button>
                                                    </div>
                                                </div>
                                            </div><!-- /.modal-content -->
                                        </div><!-- /.modal-dialog -->
                                    </div><!-- /.modal -->
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
