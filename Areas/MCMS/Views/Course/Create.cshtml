@using MitechCenter.vn.Models;
@model Course
@{
	var teacher = (Teacher) ViewBag.teacher;
	ViewData["Title"] = "THÊM KHÓA HỌC";
}
<!-- ============================================================== -->
<!-- Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->
<div class="page-breadcrumb">
	<div class="row">
		<div class="col-7 align-self-center">
			<h4 class="page-title text-truncate text-dark font-weight-medium mb-1">Thêm khóa học</h4>
			<div class="d-flex align-items-center">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb m-0 p-0">
						<li class="breadcrumb-item"><a href="index.html" class="text-muted">MCMS</a></li>
						<li class="breadcrumb-item text-muted active" aria-current="page">Khóa học</li>
						@if (teacher != null) {
							<li class="breadcrumb-item text-muted active" aria-current="page">Giảng viên: @teacher.tDisplayName</li>
						}
					</ol>
				</nav>
			</div>
		</div>
		<div class="col-5 align-self-center">
			<div class="customize-input float-right">
				@* <button type="button" class="btn waves-effect waves-light btn-danger btn-rounded px-5" onclick="window.history.back()">Hủy</button> *@
			</div>
		</div>
	</div>
</div>
<!-- ============================================================== -->
<!-- End Bread crumb and right sidebar toggle -->
<!-- ============================================================== -->

 <!-- ============================================================== -->
<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
	<!-- ============================================================== -->
	<!-- Start Page Content -->
	<!-- ============================================================== -->
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">THÊM MỚI KHÓA HỌC</h4>
					<form method="post">
						@Html.HiddenFor(x=>x.tId)
						<h4 class="card-title mt-3">Tên khóa học</h4>
						<input asp-for="cName" type="text" class="form-control" id="prenametext" placeholder="Tên khóa học">
						<h4 class="card-title mt-3">Học phí (VNĐ)</h4>
						<input asp-for="cPrice" type="number" class="form-control" id="prenametext" placeholder="Học phí (VNĐ)">
						<h4 class="card-title mt-3">Thời gian diễn ra</h4>
						<input asp-for="cLearningTime" type="text" class="form-control" id="prenametext" placeholder="Thời gian diễn ra">
						<h4 class="card-title mt-3">Lịch học</h4>
						<input asp-for="cSchedule" type="text" class="form-control" id="prenametext" placeholder="Lịch học">
						<h4 class="card-title mt-3">Chi tiết</h4>
						<textarea asp-for="cDetail" class="form-control" id="cDetail" rows="3"></textarea>
						<h4 class="card-title mt-3">Mô tả ngắn</h4>
						<textarea asp-for="cDescription" class="form-control" rows="3" placeholder="Mô tả..."></textarea>
						<h4 class="card-title mt-3">Ảnh tiêu biểu</h4>
						<input asp-for="cImage" type="text" class="form-control" id="prenametext" placeholder="Đường dẫn ảnh tiêu biểu">
						@* <div class="input-group mt-3">
							<div class="input-group-prepend">
								<label class="input-group-text" for="inputGroupSelect01">Mục tin</label>
							</div>
							<select class="custom-select" asp-for="ncId" asp-items="@ViewBag.newsCategories">
							</select>
						</div> *@
						<button type="submit" class="btn btn-block btn-rounded btn-success mt-5">THÊM MỚI</button>
						@Html.Raw(ViewBag.notification)
					</form>
				</div>
			</div>
		</div>
	</div>
	<!-- ============================================================== -->
	<!-- End PAge Content -->
	<!-- ============================================================== -->
	<!-- ============================================================== -->
	<!-- Right sidebar -->
	<!-- ============================================================== -->
	<!-- .right-sidebar -->
	<!-- ============================================================== -->
	<!-- End Right sidebar -->
	<!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Container fluid  -->
<!-- ============================================================== -->
@section Scripts {
    <!--This page plugins -->
    <script src="dist/js/ckeditor/ckeditor.js"></script>
	<script type="text/javascript">
		function goBack() {
			window.history.back()
		}
		$(document).ready(function(){
		var path = document.location.pathname;
		var directory = path.substring(path.indexOf('/'), path.lastIndexOf('/'));
		directory = directory.substring(directory.indexOf('/'), directory.lastIndexOf('/'));
		CKEDITOR.replace("cDetail", {
			height: 600,
			filebrowserUploadUrl: `${directory}/ImageUpload`,
			filebrowserUploadMethod: "form"
			});
		});
	</script>
}
<style>
	.table td, .table th {
		vertical-align: middle;
	}
	.custom-select {
		color: #000;
	}
</style>
